<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_set_tracking_time_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/settingContainer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/setting_container_padding"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/setting_set_tracking_time_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setting_set_tracking_time"
            android:layout_weight="1"
            style="@style/SettingTitle"/>

        <TextView
            android:id="@+id/setting_set_tracking_time_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:text="00 : 00"
            style="@style/SettingTitle"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setting_set_tracking_time_text"
        style="@style/SettingText"/>

</LinearLayout>