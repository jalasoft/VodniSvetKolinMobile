<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_set_attendance_boundary_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/settingContainer">

    <LinearLayout
        android:id="@+id/setting_set_attendance_boundary_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/setting_container_padding">

        <TextView
            android:id="@+id/setting_set_attendance_boundary_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setting_set_attendance_boundary_title"
            android:layout_gravity="center"
            android:layout_weight="1"
            style="@style/SettingTitle"/>

        <TextView
            android:id="@+id/setting_set_attendance_boundary_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:text="to_be_set_by_fragment"
            android:gravity="center_vertical"
            style="@style/SettingTitle"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setting_set_attendance_boundary_summary"
        style="@style/SettingText"/>

</LinearLayout>
